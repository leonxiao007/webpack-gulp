{{#extend "scss"}}
{{#content "sprites"}}
{{#each sprites}}
.{{name}} {
    width:({{width}}/100) + rem;
    height:({{height}}/100) + rem;
    background-position: {{offset_x}}/({{width}}-{{total_width}})*100% {{offset_y}}/({{height}}-{{total_height}})*100%;
}
{{/each}}
{{/content}}

{{#content "spritesheet"}}
{{#each sprites}}.{{strings.name}}, {{/each}}{
    background-image: url('{{{spritesheet.escaped_image}}}');
    background-repeat: no-repeat;
    background-size: ({{spritesheet.width}}/100)+rem ({{spritesheet.height}}/100)+rem;
}
{{/content}}
{{/extend}}
